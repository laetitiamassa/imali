<%= simple_form_for(@invoice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :matter_id %>
    <%= f.input :invoice_number %>
    <%= f.input :invoice_date %>
    <%= f.input :invoice_duedate %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
