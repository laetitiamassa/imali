<h1 class="page-header">Les paiements reçus
  <!-- <small><%= link_to "Paiements par dossier", "", :class => "btn btn-default btn-sm" %></small>
  <%= link_to 'Ajouter un nouveau paiement', new_payment_path, :class => "btn btn-info pull-right" %> -->
<button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#myModalPayment">
    Ajouter un nouveau paiement
  </button>
</h1>
<%= render "visitors/modal" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Client</th>
      <th>Dossier</th>
      <th>Montant</th>
      <th>Date de réception</th>
      <th>Commentaire</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
    <% if current_user == payment.matter.client.user %>
      <tr>
        <td><%= payment.matter.client.last_name %></td>
        <td><%= payment.matter.name %></td>
        <td><%= payment.amount %> €</td>
        <td><%= payment.reception_date %></td>
        <td><%= payment.comment %></td>
        <td><%= link_to 'Voir', payment, :class => "btn btn-default btn-sm" %>
          <%= link_to 'Modifier', edit_payment_path(payment), :class => "btn btn-default btn-sm" %></td>
        
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

