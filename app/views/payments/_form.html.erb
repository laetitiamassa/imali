<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :matter_id %>
    <%= f.input :amount %>
    <%= f.input :reception_date %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ajouter le paiement au dossier", :class => "btn btn-default" %>
  </div>
<% end %>
