<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount, label: "Montant payé" %>
    <%= f.input :reception_date, label: "Date de réception" %>
    <%= f.input :comment, label: "Commentaire" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ajouter le paiement au dossier", :class => "btn btn-default" %>
  </div>
<% end %>
